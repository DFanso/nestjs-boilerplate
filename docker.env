# Docker Environment Variables
# Copy this file to .env for Docker Compose

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=nestjs_boilerplate
POSTGRES_PORT=5432

# Application Ports
APP_PORT=9000
DEV_PORT=3000

# Application Environment
NODE_ENV=production

# Database URL (used by Prisma)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nestjs_boilerplate

# JWT Configuration (paths inside container)
JWT_PRIVATE_KEY_PATH=/app/keys/private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/public.pem

# Optional: CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:9000 